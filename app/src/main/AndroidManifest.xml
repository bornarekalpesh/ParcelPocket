<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.parcelpocket">
<uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ParcelPocket">
        <activity
            android:name=".activity.view.Profile"
            android:parentActivityName=".activity.Dashboad" />
        <activity
            android:name=".activity.Shipment_list"
            android:parentActivityName=".activity.Dashboad" />
        <activity
            android:name=".activity.Create_Shipment"
            android:parentActivityName=".activity.Dashboad" />
        <activity
            android:name=".activity.activity_shipping_calculator"
            android:parentActivityName=".activity.Dashboad" />
        <activity
            android:name=".activity.Register"
            android:theme="@style/Theme.ParcelPocket.NoActionBar" />
        <activity
            android:name=".activity.Dashboad"
            android:label="@string/title_activity_dashboad"
            android:theme="@style/Theme.ParcelPocket.NoActionBar" />
        <activity
            android:name=".activity.Splash"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
    </application>

</manifest>